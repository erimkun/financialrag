# Turkish Financial RAG System - Frontend Environment Configuration
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API URL
VITE_API_BASE_URL=http://localhost:8000

# API endpoints
VITE_API_UPLOAD_ENDPOINT=/api/upload
VITE_API_QUERY_ENDPOINT=/api/query
VITE_API_DOCUMENTS_ENDPOINT=/api/documents
VITE_API_HEALTH_ENDPOINT=/api/health

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development server port
VITE_PORT=5173

# Development server host
VITE_HOST=localhost

# Hot reload
VITE_HMR=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Application title
VITE_APP_TITLE=Turkish Financial AI Assistant

# Application description
VITE_APP_DESCRIPTION=AI destekli finansal dok√ºman analizi

# Theme settings
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable debug panel (for development)
VITE_ENABLE_DEBUG=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
# Maximum file size in MB (should match backend)
VITE_MAX_FILE_SIZE_MB=50

# Allowed file types
VITE_ALLOWED_FILE_TYPES=.pdf

# Upload chunk size in bytes
VITE_UPLOAD_CHUNK_SIZE=1048576

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Request timeout in milliseconds
VITE_REQUEST_TIMEOUT=30000

# Retry attempts for failed requests
VITE_RETRY_ATTEMPTS=3

# Debounce delay for search in milliseconds
VITE_SEARCH_DEBOUNCE=500
